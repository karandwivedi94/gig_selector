<div class = "container">

<h1>Upcoming Events in Sydney</h1>


<% @gigs.each do |gig|%>
    <ul class = "gigs-index">
    
        <h1 class = "gignameindex"> <%= link_to gig.name, gig %></h1>
        <h2 class ="gigsdateindex">Saturday, 24th July @ <%= gig.location %> </h2>
        <div class ="giginfoindex">
        <div class="imagecontainer"><%= image_tag gig.image, :class => 'feature' %> <div class="imagetext"> 
        <h4> <%= gig.genre %> </h4></div> </div> 
        <div class ="giglineupindex">
        <li class = "artistname"><% gig.artists.each do |artist| %> 
        <%= link_to artist.name, artist %>
        <% end %> 
        </li> </div>
        <button class="button-32" role="button">Tickets!</button>
        </div>
    </ul>  
<% end%>

</div>






