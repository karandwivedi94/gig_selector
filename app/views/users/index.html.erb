

<h1>All Promoters</h1>

<% @users.each do |user|%>
    <%= image_tag user.image, :class => 'userthumb' if user.image.present? %>
    <div class="usercontainerindex">
        Name: <%= user.name %>
        website: <%= user.website %>
        FB: <%= user.fb_link %>
        IG: <%= user.ig_link %>
        <% user.gigs.each do |gig| %> 
        <%= link_to gig.name, gig %>
        
    </div>
<% end %> 

<div class="controls">
<% if @current_user.present? && (@current_user.email == user.email || @current_user.admin?)  %>
    <%= link_to 'Edit User', edit_user_path(user) %>
    <%= link_to 'Delete User', user, :method => 'delete', :data => { :confirm => 'Are you sure?'} %>
</div>
<% end%>

<% end%>

