<div class="artistshowcontainer">
<h1 class="artistshowname"> <%= @user.name %></h1>

<div class = "bordershowartist"><h3><%= image_tag @user.image, :class => "left" if @user.image.present?  %>

<div class="righttext">


<a href=<%= @user.email %>><img class="sociallogo" src="/assets/emaillogo.png" alt=""></a> |
<a href=<%= @user.fb_link %>><img class="sociallogo" src="/assets/fblogo.png" alt=""></a> |
<a href=<%= @user.ig_link %>><img class="sociallogo" src="/assets/output-onlinepngtools.png" alt=""></a> 
<br>

All events: <% @user.gigs.each do |gig| %> 
<%= link_to gig.name, gig %>
<% end %> 

</div>
</h3> </div>

<div class="controls">
<% if @current_user.present? && (@current_user.email == @user.email || @current_user.admin?)  %>
    <%= link_to 'Edit User', edit_user_path(@user) %>
    <%= link_to 'Delete User', @user, :method => 'delete', :data => { :confirm => 'Are you sure?'} %>
</div>
<% end%>

</div>

